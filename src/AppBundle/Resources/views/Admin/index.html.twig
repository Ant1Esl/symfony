{% extends 'base.html.twig' %}

{% block body %}



    <h1 class="text-center">Administration</h1>
    <hr/>
    <div class="col-md-3">
    <div class="card text-center">
    <div class="card-block">
    <ul class="list-group">
        <h2>Administrators</h2>
    <ul>
        {% for admin in admins %}
            <li class="list-group-item">{{ admin.firstName }} - {{ admin.lastName }}
                <a class="btn btn-danger pull-right"
                        href="{{ path('admin_delete', {id: admin.id }) }}">X</a></li>
        {% endfor %}
    </ul>
    </div>
    </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-block">
                <ul class="list-group">
                    <h2>Students</h2>
                    {% for student in students %}
                        <li class="list-group-item">
                            {{ student.firstName }} - {{ student.lastName }}               <a href={{ path('student_delete', {id: student.id}) }} class="btn btn-danger pull-right">X</a>
                        </li>
                    {% endfor %}
                </ul>
                    <a style="margin-top: 20px;" href={{ path('student_list') }} class="btn btn-primary">Manage Students</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-block">
                <ul class="list-group">
                    <h2>Exams</h2>
                    {% for exam in exams %}
                        <li class="list-group-item">
                            {{ exam.name }}                    <a href={{ path('exam_delete', {id: exam.id}) }} class="btn pull-right btn-danger">X</a>
                        </li>
                    {% endfor %}
                </ul>
                    <a style="margin-top: 20px;" href={{ path('exam_list') }} class="btn btn-primary">Manage Exams</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-block">
                <ul class="list-group">
                    <h2>Grades</h2>
                    {% for grade in grades %}
                        <li class="list-group-item">
                            {{ grade.exam.name }} - {{ grade.student.email }} : {{ grade.gradeNumber }}
                            <a href={{ path('grade_delete', {id: grade.id}) }} class="btn btn-danger">X</a>
                        </li>
                    {% endfor %}
                </ul>
                    <a style="margin-top: 20px;" href={{ path('grade_list') }} class="btn btn-primary">Manage Grades</a>
            </div>
        </div>
    </div>
{% endblock %}